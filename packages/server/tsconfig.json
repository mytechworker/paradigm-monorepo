{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "build",
    "removeComments": true,
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "src/*": ["src/*"]
    }
  }
}
